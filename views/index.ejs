<!DOCTYPE html>
<html lang="en">
  <%-include('./partial/head.ejs') %>
  <body>
    <%-include('./partial/unauthnav.ejs') %>

    <div class="mt-8 grid lg:grid-cols-3 gap-10">
      <% if (messages !== 'undefined') { %> <% if (messages.length > 0) { %> <%
      messages.forEach(message => { %>
      <div class="card hover:shadow-lg">
        <div class="m-4">
          <span class="font-bold"><%= message.title %></span>
        </div>
        <hr />
        <div class="mt-2 mb-2 ml-4 mr-4">
          <p class="block text-gray-700"><%= message.text%></p>
        </div>
      </div>
      <% }) %> <%} else { %>
      <p>There are no messages</p>
      <% } %> <% } %>
    </div>
  </body>
</html>
